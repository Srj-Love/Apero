<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.details.DetailsActivity">

    <com.jama.carouselview.CarouselView
        android:id="@+id/cDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:carouselOffset="center"
        app:enableSnapping="true"
        app:indicatorAnimationType="drop"
        app:indicatorPadding="5"
        app:indicatorRadius="5"
        app:indicatorSelectedColor="@android:color/holo_green_dark"
        app:indicatorUnselectedColor="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:resource="@layout/item_details_row"
        app:scaleOnScroll="true"
        app:setAutoPlay="false"
        app:setAutoPlayDelay="3000"
        app:size="3"
        app:spacing="50" />

</androidx.constraintlayout.widget.ConstraintLayout>